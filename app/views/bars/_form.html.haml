= form_for @bar, :html => {:multipart => true} do |f|
  - if @bar.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bar.errors.count, "error")} prohibited this bar from being saved:"
      %ul
        - @bar.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :vote
    = f.text_field :vote
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :address
    = f.text_field :address
  .fiel_field
    = f.label :picture
    = f.file_field :picture
  .actions
    = f.submit 'Save'
