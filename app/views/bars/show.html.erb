
  
<div id="logo"><%= @bar.name %></div>


<p>
  <b> Beschreibung:</b>
  <%= @bar.description %>
</p>

<% for bar_image in @bar.bar_images %>
  <%= link_to image_tag(bar_image.photo.url(:small))%>
<% end %>

<p><%= flash[:notice] %></p>

<p>
<div id="logo">Wo?</div>
</p>
<iframe src= <%=iframe_url(@bar)%> style="width:100%" height= "380", frameborder= "0", scrolling= 'no', marginheight= "0", marginwidth= "0" ></iframe><br>

<br><br>
<table style="width:100%" id="textlable">
  <tr>
      <td>
        Ambiente
      </td> 
      <td>
        Service
      </td>
      <td>
        Preis
      </td>
  </tr>
  <tr>
    <td>
      <%= rating_for @bar, "ambience", :star => 5 %>
    </td> 
    <td>
      <%= rating_for @bar, "service", :star => 5 %>
    </td>
    <td>
      <%= rating_for @bar, "price", :star => 5 %>
    </td>
  </tr>
</table>


<!--Like_Button-->
<p>  
  <% if @current_user.present? %>
    <%= toggle_like_button(@bar, @current_user)%>
  <%end %>
</p>

<div >

<div id="logo">Deine Meinung</div>

<% if Comment.exists? %>
    <% @bar.comments.each do |f| %>
      <div class="well sidebar-nav">
        <b> Erstellt von: <%=f.user_name%> </b>
        <hr>
        <p><%= f.text %></p>
        <hr>
        <p>vor <%=distance_of_time_in_words(f.created_at, Time.now) %> </p>  
      </div>    
    <%end %>
<% else %>
  <h3>Leider ist noch kein Kommentar vorhanden</h3>
<%end %>



<%= form_for [@bar, @bar.comments.build] do |f| %>
  <p><%= f.text_area :text, :size => '10x10' %></p>
  <p><%= f.submit "Kommentieren" %>
<% end %>


</div>

<% if can? :update, @bar %>
  <%= link_to 'Edit', edit_bar_path(@bar) %>|
<% end %>

<% if can? :destroy, @bar %>
  <%= link_to 'Destroy', @bar, method: :delete, data: { confirm: 'Are you sure?'} %>
<%end %>


