
	
<header>
  <div id="logo">Barcheck.org</div>
</header>

<div class="table">
<% if @bars.blank? %>
	<h4>Deine Suche erziehlt leider kein Treffer!</h4>
<% else %>
	<h4>Deine Suche erziehlt folgende Treffer:</h4>
	<h4>
		<% @bars.sort{|a,b|a.name.downcase <=> b.name.downcase}.each do |bar| %>
		   <%=link_to(bar.name, bar_path(bar))%></br>
		<% end %>
	</h4>
<% end %>
</div>

